#include <behaviors/mouse_keys.dtsi>
#include <dt-bindings/zmk/mouse.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>

&lt {
    tapping-term-ms = <240>;
    flavor = "balanced";
    quick-tap-ms = <150>;
};

&mt {
    tapping-term-ms = <200>;
    flavor = "tap-preferred";
    quick-tap-ms = <150>;
};

&caps_word { continue-list = <UNDERSCORE MINUS>; };

/ {
    behaviors {
        BSDEL: BSDEL {
            compatible = "zmk,behavior-mod-morph";
            label = "BSDEL";
            bindings = <&kp BACKSPACE>, <&kp DEL>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };

        lt_bsdel: lt_bsdel {
            compatible = "zmk,behavior-hold-tap";
            label = "LT_BSDEL";
            bindings = <&mo>, <&BSDEL>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            flavor = "tap-preferred";
            quick-tap-ms = <300>;
        };

        holdtap: holdtap {
            compatible = "zmk,behavior-hold-tap";
            label = "HOLDTAP";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <250>;
            require-prior-idle-ms = <150>;
            flavor = "tap-preferred";
        };

        arrows: arrows {
            compatible = "zmk,behavior-hold-tap";
            bindings = <&down_up_arrow>, <&right_left_arrow>;

            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
        };

        right_left_arrow: right_left_arrow {
            compatible = "zmk,behavior-mod-morph";
            bindings = <&right_arrow>, <&left_arrow>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };

        down_up_arrow: down_up_arrow {
            compatible = "zmk,behavior-mod-morph";
            bindings = <&down_arrow>, <&up_arrow>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };

        mkp_layer: mkp_layer {
            compatible = "zmk,behavior-hold-tap";
            bindings = <&mo>, <&mkp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };
    };

    combos {
        compatible = "zmk,combos";

        win_mv_right {
            bindings = <&winmvright>;
            key-positions = <9 10>;
            slow-release;
            layers = <0 1>;
        };

        win_mv_left {
            bindings = <&winmvleft>;
            key-positions = <1 2>;
            slow-release;
            layers = <0 1>;
        };

        brackets {
            bindings = <&brackets>;
            key-positions = <25 34>;
            layers = <0 1>;
        };

        parenthesis {
            bindings = <&parenthesis>;
            key-positions = <13 22>;
            layers = <0 1>;
        };

        jis_ime_togle {
            bindings = <&kp LA(GRAVE)>;
            key-positions = <8 9>;
            layers = <0 1>;
        };

        find {
            bindings = <&kp LC(F)>;
            key-positions = <25 26>;
            layers = <0 1>;
        };

        paste {
            bindings = <&holdtap LG(V) LC(V)>;
            key-positions = <19 20>;
            layers = <0 1>;
        };

        dblsft {
            bindings = <&DBLSFT>;
            key-positions = <15 16>;
            layers = <0 1>;
        };

        ime_onoff {
            bindings = <&holdtap LANGUAGE_2 LANGUAGE_1>;
            key-positions = <20 21>;
            layers = <0 1>;
        };

        back {
            bindings = <&kp LA(LEFT)>;
            key-positions = <13 14>;
            layers = <0 1>;
        };

        forward {
            bindings = <&kp LA(RIGHT)>;
            key-positions = <21 22>;
            layers = <0 1>;
        };

        ime_off {
            bindings = <&kp LANGUAGE_2>;
            key-positions = <14 15>;
            layers = <0 1>;
        };

        braces {
            bindings = <&braces>;
            key-positions = <1 10>;
            layers = <0 1>;
        };

        undo {
            bindings = <&kp LC(Z)>;
            key-positions = <26 27>;
            layers = <0 1>;
        };

        redo {
            bindings = <&kp LC(Y)>;
            key-positions = <32 33>;
            layers = <0 1>;
        };
    };

    macros {
        DBLSFT: DBLSFT {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_SHIFT &kp LEFT_SHIFT>;
            label = "DBLSFT";
        };

        DBLCTL: DBLCTL {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LCTRL &kp LCTRL>;
            label = "DBLCTL";
        };

        winmvright: winmvright {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LEFT_GUI &kp RIGHT>,
                <&macro_release>,
                <&kp RIGHT &kp LEFT_WIN>;

            label = "WINMVRIGHT";
        };

        winmvleft: winmvleft {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LEFT_GUI &kp LEFT>,
                <&macro_release>,
                <&kp LEFT &kp LEFT_WIN>;

            label = "WINMVLEFT";
        };

        at: at {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp AT_SIGN>;
            label = "AT";
        };

        hash: hash {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp HASH>;
            label = "HASH";
        };

        amp: amp {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp AMPERSAND>;
            label = "AMP";
        };

        dollar: doller {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp DOLLAR>;
            label = "DOLLER";
        };

        backquote: backquote {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp GRAVE>;
            label = "BACKQUOTE";
        };

        quote: quote {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp SINGLE_QUOTE>;
            label = "QUOTE";
        };

        doublequote: doublequote {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp DOUBLE_QUOTES>;
            label = "DOUBLEQUOTE";
        };

        caret: caret {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp CARET>;
            label = "CARET";
        };

        pipe: pipe {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp PIPE>;
            label = "PIPE";
        };

        parenthesis: parenthesis {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp LEFT_PARENTHESIS &kp RIGHT_PARENTHESIS &kp LEFT_ARROW>;
            label = "PARENTHESIS";
        };

        brackets: brackets {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp LEFT_BRACKET &kp RIGHT_BRACKET &kp LEFT>;
            label = "BRACKETS";
        };

        braces: braces {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp LEFT_BRACE &kp RIGHT_BRACE &kp LEFT>;
            label = "BRACES";
        };

        right_arrow: right_arrow {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&kp LANGUAGE_2 &kp KP_NUMLOCK>,
                <&macro_press>,
                <&kp LEFT_ALT>,
                <&macro_tap>,
                <&kp KP_PLUS &kp KP_NUMBER_2 &kp KP_NUMBER_1 &kp KP_NUMBER_9 &kp KP_NUMBER_2>,
                <&macro_release>,
                <&kp LEFT_ALT>,
                <&macro_tap>,
                <&kp KP_NUMLOCK>;
        };

        left_arrow: left_arrow {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&kp LANGUAGE_2 &kp KP_NUMLOCK>,
                <&macro_release>,
                <&kp LEFT_SHIFT>,
                <&macro_press>,
                <&kp LEFT_ALT>,
                <&macro_tap>,
                <&kp KP_PLUS &kp KP_NUMBER_2 &kp KP_NUMBER_1 &kp KP_NUMBER_9 &kp KP_NUMBER_0>,
                <&macro_release>,
                <&kp LEFT_ALT>,
                <&macro_tap>,
                <&kp KP_NUMLOCK>;
        };

        up_arrow: up_arrow {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&kp LANGUAGE_2 &kp KP_NUMLOCK>,
                <&macro_press>,
                <&kp LEFT_ALT>,
                <&macro_tap>,
                <&kp KP_PLUS &kp KP_NUMBER_2 &kp KP_NUMBER_1 &kp KP_NUMBER_9 &kp KP_NUMBER_1>,
                <&macro_release>,
                <&kp LEFT_ALT>,
                <&macro_tap>,
                <&kp KP_NUM>;
        };

        down_arrow: down_arrow {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&kp LANGUAGE_2 &kp KP_NUMLOCK>,
                <&macro_press>,
                <&kp LEFT_ALT>,
                <&macro_tap>,
                <&kp KP_PLUS &kp KP_NUMBER_2 &kp KP_NUMBER_1 &kp KP_NUMBER_9 &kp KP_NUMBER_3>,
                <&macro_release>,
                <&kp LEFT_ALT>,
                <&macro_tap>,
                <&kp KP_NUMLOCK>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        DEFAULT {
            bindings = <
&lt 6 ESCAPE              &kp Q      &kp W  &kp MINUS         &kp R                 &kp Z                      &holdtap LC(X) X  &kp D        &holdtap LG(E) E  &kp L                &kp P                     &holdtap PRINTSCREEN SQT
&mt LCTRL TAB             &kp I      &kp T  &holdtap LC(A) A  &kp K                 &kp G                      &kp H             &kp N        &kp O             &kp U                &kp S                     &mt RIGHT_ALT SEMICOLON
&mt LEFT_SHIFT LS(LC(M))  &kp SLASH  &kp F  &holdtap LC(C) C  &kp M                 &kp B                      &kp J             &kp Y        &kp V             &holdtap EXCL COMMA  &holdtap QUESTION PERIOD  &arrows 0 0
                                            &mkp LCLK         &mt LEFT_SHIFT SPACE  &mt LEFT_GUI LANGUAGE_1    &lt_bsdel 5 0     &lt 4 ENTER
            >;
        };

        MOUSE {
            bindings = <
&trans  &trans  &trans  &trans  &trans             &trans               &trans  &trans     &trans             &trans     &trans  &trans
&trans  &trans  &trans  &trans  &trans             &trans               &trans  &trans     &trans             &trans     &trans  &trans
&trans  &trans  &trans  &trans  &trans             &trans               &trans  &mkp LCLK  &mkp_layer 2 MCLK  &mkp RCLK  &trans  &trans
                        &trans  &mkp_layer 2 MCLK  &mkp_layer 3 RCLK    &trans  &trans
            >;
        };

        SCROLL {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans
            >;
        };

        SNIPE {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans
            >;
        };

        NUMBER {
            bindings = <
&trans       &kp ASTERISK  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9          &kp PLUS               &kp TILDE        &backquote  &quote  &doublequote  &caret         &trans
&kp PERCENT  &kp SLASH     &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6          &kp MINUS              &kp LEFT         &kp DOWN    &kp UP  &kp RIGHT     &kp BACKSLASH  &kp PIPE
&trans       &kp NUMBER_0  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3          &kp COLON              &kp EXCLAMATION  &at         &hash   &amp          &dollar        &trans
                                         &mkp RCLK     &mt LEFT_SHIFT EQUAL  &mt LEFT_ALT PERIOD    &trans           &trans
            >;
        };

        FUNCTION {
            bindings = <
&kp KP_NUMLOCK  &kp LEFT_BRACE        &kp F7  &kp F8     &kp F9     &kp F12      &kp INS   &kp DEL        &kp PRINTSCREEN  &kp PAUSE_BREAK  &kp RIGHT_BRACE        &trans
&kp CAPSLOCK    &kp LEFT_PARENTHESIS  &kp F4  &kp F5     &kp F6     &kp F11      &kp HOME  &kp PAGE_DOWN  &kp PG_UP        &kp END          &kp RIGHT_PARENTHESIS  &trans
&kp SCROLLLOCK  &kp LEFT_BRACKET      &kp F1  &kp F2     &kp F3     &kp F10      &trans    &trans         &trans           &trans           &kp RIGHT_BRACKET      &trans
                                              &mkp MCLK  &kp LC(Z)  &kp LC(Y)    &trans    &trans
            >;
        };

        SYSTEM {
            bindings = <
&trans       &trans        &trans        &trans        &trans        &out OUT_USB    &out OUT_USB  &trans        &trans        &trans        &trans        &bt BT_CLR
&trans       &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &trans
&bootloader  &trans        &trans        &trans        &trans        &out OUT_BLE    &out OUT_BLE  &trans        &trans        &trans        &trans        &bootloader
                                         &trans        &trans        &trans          &trans        &trans
            >;
        };
    };
};
